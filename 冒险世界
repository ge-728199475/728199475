};
void ditu()
{

	int j;
	int i;

	for (i = 0; i < 20; i++)
	{
		for (j = 0; j < 20; j++)
		{
			switch (map[i][j])
			{
			case 0:
				printf("▇");
				break;
			case 1:
				printf("人");
				break;
			case 3:
				printf("﹌");
				break;

			default:
				printf("※");
				break;
			}





		}
		printf("\n");
	}


}
void yidong()
{
	int j, i;
	for (i = 0; i < 20; i++)
	{
		for (j = 0; j < 20; j++)
		{
			if (map[i][j] == 1)

				break;
		}

		if (map[i][j] == 1)

			break;
	}

	char yidong = _getch();
	switch (yidong)
	{
	case 'w':
	case 'W':
	case '72':
		if (map[i - 1][j] == 0)
		{
			map[i][j] -= 1;
			map[i - 1][j] += 1;
			break;

		}
	case 's':
	case 'S':
		if (map[i + 1][j] == 0)
		{
			map[i][j] -= 1;
			map[i + 1][j] += 1;
			break;

		}
	case 'd':
	case 'D':
		if (map[i][j + 1] == 0)
		{
			map[i][j] -= 1;
			map[i][j + 1] += 1;
			break;

		}
	case 'a':
	case 'A':
		if (map[i][j - 1] == 0)
		{
			map[i][j] -= 1;
			map[i][j - 1] += 1;
			break;

		}


	default:
		break;
	}

}



int main()
{
	while (1)
	{
		ditu();
		printf("\t\t\t\t\t\t\t\t\t\n你的金钱：%d", qian);
		yidong();
		system("cls");

	}
	return 0;
}
